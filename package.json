{
  "name": "@whiskeysockets/libsignal-node",
  "version": "2.0.1",
  "description": "Open Whisper Systems' libsignal for Node.js with TypeScript support",
  "repository": "WhiskeySockets/libsignal-node",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "signal",
    "whispersystems",
    "crypto",
    "typescript",
    "baileys"
  ],
  "license": "GPL-3.0",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "format:check": "prettier --check 'src/**/*.{js,ts,json}'",
    "prepublishOnly": "npm run build && npm run test && npm run lint",
    "clean": "rimraf lib",
    "dev": "npm run build:watch"
  },
  "dependencies": {
    "@types/google-protobuf": "^3.15.12",
    "@wppconnect/curve25519": "^1.0.0",
    "async-mutex": "^0.5.0",
    "google-protobuf": "^3.21.4",
    "long": "^5.3.2",
    "protobufjs": "^7.4.0"
  },
  "files": [
    "lib/*",
    "src/*",
    "types/*"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.16.5",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "protobufjs-cli": "^1.1.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
